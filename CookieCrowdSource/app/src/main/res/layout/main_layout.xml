<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/main_layout_text_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorMainActivityTitleBar"
        android:text="@string/app_name_human_readable"
        android:gravity="center"
        android:textSize="40sp"
        android:textColor="@color/colorMainActivityTitleBarText" />

    <ImageView
        android:id="@+id/main_layout_image_view"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_layout_text_view"
        android:adjustViewBounds="true"
        android:src="@drawable/cookie_background" />

    <ImageView
        android:id="@+id/first_dozen_free_image"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/first_dozen_free"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get Cookies!"
        android:id="@+id/get_cookies"
        android:layout_centerInParent="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="16dp"/>

    
</RelativeLayout>